generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL") // mysql://user:pass@localhost:3306/a11y_pulse
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  urls      Url[]    @relation("UserUrls")
  createdAt DateTime @default(now())
}

model Url {
  id        Int      @id @default(autoincrement())
  address   String
  score     Int
  lastTest  DateTime
  userId    Int
  user      User     @relation("UserUrls", fields: [userId], references: [id])
}
